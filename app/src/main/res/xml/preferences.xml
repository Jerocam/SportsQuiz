<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <ListPreference
        android:entries="@array/guesses_list"
        android:entryValues="@array/guesses_list"
        android:key="pref_numberOfChoices"
        android:persistent="true"
        android:summary="@string/number_of_choices_description"
        android:title="@string/number_of_choices" 
        android:defaultValue="3"/>

    <MultiSelectListPreference
        android:entries="@array/sports_list_for_settings"
        android:entryValues="@array/sports_list"
        android:key="pref_sportsToInclude"
        android:persistent="true"
        android:summary="@string/sports_description"
        android:title="@string/field_sports"
        android:defaultValue="@array/sports_list"/>

</PreferenceScreen>